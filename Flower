#include <iostream>

int main(int argc, const char * argv[])
{

    // insert code here...
    
    
    int n,i,j,k;
    printf("Input: ");
    scanf("%d",&n);
    
    for(i=1;i<=n+1;i++)
    {
        printf("\n");
        for (j=i;j<=n;j++)
            printf(" ");
        {
            for (k=0;k<(i*2)-1;k++)
                if (i==(n/2)+2 and k!=0 and k!=n+1) printf(" ");
                else if (i>(n/2)+2 and k==(i+1)-((n/2)+2)) printf(" ");
                else if (i>(n/2)+2 and k==(i+1)+((n/2)-2)) printf(" ");
                else printf("*");
        }
    }
    for(i=1;i<=n;i++)
    {
        printf("\n");
        for(j=1;j<=i;j++)
            printf(" ");
        {
            for(k=i+i;k<(2*n)+1;k++)
                if (i>=(n/2)-((n/2)-1) and i<n-((n/2)+1) and k==n-((n/2)-1)+i-1) printf(" ");
             else if (i>=(n/2)-((n/2)-1) and i<n-((n/2)+1) and k==n+((n/2)-1)+i+1) printf(" ");
             else if (i==(n/2) and k!=i+i and k!=n+n) printf(" ");
             else printf("*");
        }
    }
    for (i=1;i<=n/2;i++)
    {
        printf("\n");
        for (j=1;j<=n;j++)
        {
            printf(" ");
        }
        for (k=1;k<=(n/n);k++)
            printf("*");
    }
    printf("\n");
    for (i=1;i<=(n/2)+1;i++)
    {
        printf(" ");
    }
    for (j=1; j<=n;j++)
    {
        printf("*");
    }
    
    for (i=1;i<=n/2;i++)
    {
        printf("\n");
        for (j=1;j<=n;j++)
        {
            printf(" ");
        }
        for (k=1;k<=(n/n);k++)
            printf("*");
 
    }
    
    
    

return 0;
}
